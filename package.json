{
  "name": "node-vue-express-boilerplate",
  "description": "NodeJS + Express + Vue.js + Webpack + LowDB + Docker boilerplate",
  "version": "1.0.0",
  "author": "Floris Porro <floris@streammyevent.com>",
  "scripts": {
    "start": "node ./server/server.js",
    "_dev": "nodemon --exec cross-env NODE_ENV=development webpack-dev-server --hot",
    "dev": "nodemon --exec NODE_ENV=development node ./server/server.js",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules"
  },
  "nodemonConfig": {
    "ignore": [
      "db.json"
    ]
  },
  "dependencies": {
    "bootstrap": "^4.1.1",
    "chalk": "^2.4.1",
    "express": "^4.15.3",
    "lowdb": "^1.0.0",
    "moment": "^2.22.2",
    "mustache": "^2.3.0",
    "nodemon": "^1.11.0",
    "pug": "^2.0.3",
    "socket.io": "^2.1.1",
    "vue": "^2.3.3",
    "vue-socket.io": "^2.1.1-b",
    "webpack-dev-middleware": "^1.11.0",
    "webpack-hot-middleware": "^2.18.2"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-preset-env": "^1.5.1",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "file-loader": "^0.9.0",
    "node-sass": "^4.5.0",
    "sass-loader": "^5.0.1",
    "vue-loader": "^12.1.0",
    "vue-template-compiler": "^2.3.3",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5"
  }
}
